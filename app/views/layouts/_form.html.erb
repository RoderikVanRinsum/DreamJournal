<div class="search-form">
  <h2>Search dreams</h2>
  <%= form_tag(dreams_path, method: "get") do %>

    <div class="form-group">
      <%= text_field_tag :keyword, params[:keyword], class: 'form-control', placeholder: 'Keyword' %>
    </div>

    <div class-"form-group">
      <%= submit_tag "Search" %>
    </div>
    
  <% end %>

</div>
