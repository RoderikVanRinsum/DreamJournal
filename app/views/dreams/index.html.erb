<div class="col-md-6 col-md-offset-2">
  <section class="main-content">
    <h1>Dream index</h1>
    <button class="btn btn-primary" id="add-dream">Add dream</button>

    <h2>Add new dream</h2>
    <div class="dream-form">
      <%= form_for(Dream.new) do |f| %>
        <div class="form-group">
          <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
        </div>
        <div class="form-group">
          <%= f.text_area :description, class: 'form-control', placeholder: 'Description' %>
        </div>
        <div class="form-group">
          <%= f.datetime_field :date, class: 'form-control', placeholder: 'Date' %>
        </div>
        <div class='form-group'>
          <%= f.submit class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>

    <% @dreams.each do |dream| %>
      <article>
       <h3><%= link_to dream.name, dream %></h3>
       <p><%= dream.description %></p>
      </article>
    <% end %>
  </section>
</div>

<div class="col-md-2">
  <aside class="search-sidebar">
    <h2>Search dreams</h2>
    <p>Browse dreams here</p>
  </aside>
</div>